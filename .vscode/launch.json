{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug NestJS",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug"
        ],
        "port": 9229,
        "skipFiles": [
          "<node_internals>/**"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "outFiles": [
          "${workspaceFolder}/new-fyp-chatbot-nest/dist/**/*.js"
        ],
        "cwd": "${workspaceFolder}/new-fyp-chatbot-nest/"  // Make sure this points to your project folder
      }
    ]
  }
  